//lab 4, task 1
#include <iostream>
using namespace std;
int main() {
  float a;
  float R;
  cout << "Введите угол a " << endl;
  cin >> a;
  while (a < 0 || a > 360) {
   cout << "Введите угол" << endl;
   cin >> a;
  }
  R = a * (3.14 / 180);
  cout << "Угол а в радианах равен " << R << endl;
  return 0;
}

//lab 4, task 2 STILL IN WORK!!!
#include <iostream>
using namespace std;
int main() {
  float a;
  float D;
  cout << "Введите угол а радианах (число от 0 до 6.28)" << endl;
  cin >> a;
  while (a < 0 || a > 6.28) {
   cout << "Недопустимое значение!" << endl;
   cout << "Введите угол а радианах (число от 0 до 6.28)" << endl;
   cin >> a;
  }
  D = a * 180 / 3.14;
  cout << "Угол а в градусах равен " << D << endl;
  return 0;
}
